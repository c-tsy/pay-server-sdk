{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}